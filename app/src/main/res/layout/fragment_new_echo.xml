<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/frameLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Fragments.NewEchoFragment">

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/new_echo_avatar"
    android:layout_width="39dp"
    android:layout_height="39dp"
    android:layout_marginTop="102dp"
    android:background="@drawable/new_echo_avatar"
    android:scaleType="centerCrop"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.099"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearanceOverlay="@style/new_echo_avatar"
    tools:ignore="ContentDescription" />

  <com.google.android.material.textfield.TextInputEditText
    android:id="@+id/echo_content"
    android:layout_width="320dp"
    android:layout_height="156dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/echo_list_item_shape"
    android:gravity="top"
    android:hint="@string/content_hint"
    android:inputType="textMultiLine"
    android:lines="10"
    android:padding="20dp"
    android:singleLine="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.489"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/username" />

  <Button
    android:id="@+id/post_echo_button"
    android:layout_width="319dp"
    android:layout_height="71dp"
    android:layout_marginTop="28dp"
    android:text="@string/post_echo_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/echo_content" />

  <TextView
    android:id="@+id/username"
    android:layout_width="131dp"
    android:layout_height="28dp"
    android:layout_marginTop="108dp"
    android:lineSpacingExtra="20sp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.271"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/today"
    android:layout_width="109dp"
    android:layout_height="28dp"
    android:layout_marginTop="112dp"
    android:lineSpacingExtra="20sp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.847"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>